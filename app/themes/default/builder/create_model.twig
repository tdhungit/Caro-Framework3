<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        {{ t._('Create new Model') }}
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-default">
                {{ form('/builder/create_model', 'method': 'post', 'class': 'form-horizontal') }}
                <div class="box-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">
                            {{ t._('Model name') }}
                        </label>
                        <div class="col-sm-10">
                            <input id="model_name-control" name="model_name" class="form-control" type="text" value="" />
                            ex: Accounts => table in database accounts
                        </div>
                    </div>
                </div>

                <div class="box-footer">
                    <button type="reset" class="btn pull-right" name="action" onclick="location.href='{{ url('/builder') }}'">{{ t._('Cancel') }}</button>
                    <button id="submit-button" type="submit" class="btn btn-info pull-right" name="action" style="margin-right: 5px;">{{ t._('Save') }}</button>
                </div>
                {{ end_form() }}
            </div>
        </div>
    </div>
</section>